.blogsContainer
	ul
		list-style: none
		padding: 0
		display: flex
		width: 100%
		flex-direction: row
		flex-wrap: wrap
		justify-content: space-evenly

		li
			flex-shrink: 1
			border: 1px solid $gray
			max-width: 173px
			width: 35%
			display: flex
			flex-direction: column
			justify-content: center
			align-items: center
			padding: 14px
			margin: 10px 5px
			transition: border $time
			cursor: pointer

			figure
				width: 100%
				overflow: hidden
				margin: 0
				padding: 0 20px
				box-sizing: border-box

				img
					width: 100%

			span
				padding: 15px 0 0
				text-align: center
				color: $soft_gray
				text-decoration: underline
				letter-spacing: 0.44px
				transition: color $time

			&:hover
				border-color: $violet
				border-bottom: 8px solid $violet

				span
					color: $gray
