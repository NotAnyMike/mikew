.blogsContainer
	/******************************* any change made inside 
	 ******************************** this block copy to the file 
	 ********************************* writings.styl, search for the text
	 ********************************** code: 453023 
	 **********************************************************************/
	ul
		list-style: none
		padding: 0
		display: flex
		width: 100%
		flex-direction: row
		flex-wrap: wrap
		justify-content: space-evenly

		li
			flex-shrink: 1
			border: 1px solid $red_violet
			max-width: 173px
			width: 35%
			display: flex
			flex-direction: column
			justify-content: center
			align-items: center
			padding: 14px
			margin: 10px 5px
			transition: border $time
			cursor: pointer

			figure
				width: 100%
				overflow: hidden
				margin: 0
				padding: 0 20px
				box-sizing: border-box

				img
					width: 100%

			span
				padding: 15px 0 0
				text-align: center
				color: $soft_gray
				text-decoration: underline
				letter-spacing: 0.44px
				transition: color $time

				&:first-letter
					color: $soft_gray
					transition: $time color

			&:hover
				border-color: $violet
				border-bottom: 8px solid $violet

				span
					color: $gray

					&:first-letter
						color: $violet

@media only screen and (min-width: 601px)
	.blogsContainer
		ul
			justify-content: center

			li
				max-width: 220px
	/************************ end of block ****************************/

@media only screen and (min-width: 601px)
	.blogsContainer
		ul
			li
				flex-direction: row
				justify-content: space-between
				max-width: initial
				border: 0
				width: 100%

				figure
					width: 400px
					height: 250px
					line-height: 250px
					padding: 20px
					border: 1px solid $red_violet
					flex-shrink: 0
					text-align: center

					img
						display: inline-block

				span
					flex-grow: 1
					text-align: left
					padding-left: 90px
					font-size: 25px
					text-transform: uppercase
					color: $gray
