body
	border: 0
	margin: 0
	padding: 0
	font-family: neris-light, sans
	color: $gray

header
	width: 100%

	.identifierContainer
		position: relative
		display: flex
		flex-direction: row
		justify-content: center

		.identifier
			width: 154px
			height: 115px
			margin: 50px
			display: flex
			flex-direction: column
			justify-content: space-between
			align-items: center

			.isotype
				background-image: url('/img/isotipo.png')
				width: 56px
				height: 65px
				background-size: contain
				background-repeat: no-repeat

			.logo
				width: 154px
				height: 28px
				background-image: url('/img/mikew.png')
				background-size: contain
				background-repeat: no-repeat

		.options
			position: absolute
			top: 0
			right: 0
			display: flex
			flex-direction: column
			height: 100%
			justify-content: space-evenly
			padding: 0 30px

			.cv
				text-transform: uppercase
				border: 1px gray solid

			.lenguage
				text-decoration: underline

	ul
		list-style: none
		display: flex
		flex-direction: row
		justify-content: center
		border-top: 1px gray solid
		border-bottom: 1px gray solid
		margin: 0
		padding: 0

		li
			text-align: center
			text-transform: uppercase
			padding: 10px 20px
			cursor: pointer
			width: 120px
			font-size: 12px
			box-sizing: border-box

			&:hover
				color: $violet
