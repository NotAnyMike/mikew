body
	border: 0
	margin: 0
	padding: 0

header
	width: 100%

	.identifierContainer
		position: relative
		display: flex
		flex-direction: row
		justify-content: center

		.identifier
			border: 1px solid black
			height: 80px
			width: 80px

		.options
			position: absolute
			top: 0
			right: 0
			display: flex
			flex-direction: column
			height: 100%
			justify-content: space-evenly
			padding: 0 30px

			.cv
				text-transform: uppercase
				border: 1px gray solid

			.lenguage
				text-decoration: underline

	ul
		list-style: none
		display: flex
		flex-direction: row
		justify-content: center
		border-top: 1px gray solid
		border-bottom: 1px gray solid
		margin: 0
		padding: 0

		li
			text-align: center
			text-transform: uppercase
			padding: 10px 20px
			cursor: pointer
			width: 120px
