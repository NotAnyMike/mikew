.writingsContainer
	ul
		list-style: none
		margin: 0
		padding: 0
		display: flex
		flex-direction: column
		width: 100%

		li
			padding: 25px
			flex-shrink: 1
			font-weight: normal
			transition: $time background-color, $time font-weight
			cursor: pointer

			span
				display: inline-block
				width: 100%
				text-align: center

			.title
				text-transform: uppercase
				color: $strong_violet

			.body
				margin-top: 10px
				font-style: italic
				color: $soft_gray

			&:nth-child(2n)
				background-color: $rose

				span
					color: white

				&:hover
					background-color: $stronger_rose

			&:hover
				font-weight: bold

			&:last-child
				margin-bottom: 10px

@media only screen and (min-width: 601px)
	.writingsContainer
		position: relative
			
		&:after
			content: ''
			display: inline-block
			position: absolute
			top: 0
			bottom: 0
			left: 0
			right: 0
			z-index: 1
			background: linear-gradient(90deg, $violet1, $violet2, $violet3, $violet4)
			opacity: .2


		ul
			position: relative

			li
				z-index: 2
				background-color: transparent

				&:nth-child(2n), &:nth-child(2n-1)
					background-color: transparent

					span
						&.title
							color: $red_violet

							&:first-letter
								color: $red_violet
						&.body
							color: $gray

					&:hover
						background-color: transparent
