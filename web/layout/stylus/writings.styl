.writingsContainer
	ul
		list-style: none
		margin: 0
		padding: 0
		display: flex
		flex-direction: column
		width: 100%

		li
			padding: 25px
			flex-shrink: 1
			font-weight: normal
			transition: $time background-color, $time font-weight
			cursor: pointer

			span
				display: inline-block
				width: 100%
				text-align: center

			.title
				text-transform: uppercase
				color: $strong_violet

			.body
				margin-top: 10px
				font-style: italic
				color: $soft_gray

			&:nth-child(2n)
				background-color: $rose

				span
					color: white

				&:hover
					background-color: $stronger_rose

			&:hover
				font-weight: bold

			&:last-child
				margin-bottom: 10px

@media only screen and (min-width: 601px)
	.bodyContainer
		&.writings
			.writingsContainer
				position: relative
				max-width: unset
				width: 100%
					
				&:after
					content: ''
					display: inline-block
					position: absolute
					top: 0
					bottom: 0
					left: 0
					right: 0
					z-index: 1
					background: linear-gradient(90deg, $violet1, $violet2, $violet3, $violet4)
					background: linear-gradient(90deg, black, #46002E)
					opacity: .7


				ul
					position: relative
					max-width: $max_width
					margin: 0 auto

					li
						z-index: 2
						background-color: transparent
						padding: 14px
						padding-bottom: 64px

						figure
							border-color: $violet
							background-color: white

						&:nth-child(2n), &:nth-child(2n-1)
							background-color: transparent

							span
								color: white
								font-weight: normal

							&:hover
								background-color: transparent

								span
									font-weight: bold

						&:before
							background: white
							background: linear-gradient(90deg, white 44.9%, transparent 45%, transparent 55%, white 55.1%)

						&:after
							background-color: transparent
							background-image: url("/static/img/secondary-white.png")
