.writingsContainer
	ul
		list-style: none
		margin: 0
		padding: 0
		display: flex
		flex-direction: column
		width: 100%

		li
			padding: 25px
			flex-shrink: 1
			font-weight: normal
			transition: $time background-color, $time font-weight
			cursor: pointer

			span
				display: inline-block
				width: 100%
				text-align: center

			.title
				text-transform: uppercase
				color: $strong_violet

			.body
				margin-top: 10px
				font-style: italic
				color: $soft_gray

			&:nth-child(2n)
				background-color: $rose

				span
					color: white

				&:hover
					background-color: $stronger_rose

			&:hover
				font-weight: bold

			&:last-child
				margin-bottom: 10px
